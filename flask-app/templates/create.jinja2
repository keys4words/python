{% extends 'base.jinja2' %}

{% block content %}
<h1>Creating new post</h1>
<form method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title"/>
    </div>
    <div>
        <label for="content">Content of post</label>
        <textarea name="content"></textarea>
    </div>
    <div>
        <input type="submit">
    </div>
</form>
{% endblock %}